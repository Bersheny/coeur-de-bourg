{% extends 'navbar.html.twig' %}

{% block title %}News - Cœur de bourg
{% endblock %}

{% block body %}

	<!--Image de couverture-->
	<header class="masthead2">
		<div class="container px-4 px-lg-5 h-100">
			<div class="row gx-4 gx-lg-5 h-100 align-items-center justify-content-center text-center">
				<div class="col-lg-8 align-self-end">
					<h1 class="text-white font-weight-bold" style="letter-spacing: 10px; font-family: Amatic SC; font-size: 72px">
						ÉPICERIE</h1>
				</div>
				<div class="col-lg-8 align-self-baseline">
					<h1 class="text-white" style="letter-spacing: 2px; font-family: Amatic SC; font-size: 72px;">CŒUR DE BOURG</h1>
					<h6 class="text-white-75" style="letter-spacing: 2px;">SAINT-QUENTIN-DE-CAPLONG</h6>
				</div>
			</div>
		</div>
	</header>

	{# Partie 1 #}
	<div class="div-bg-1">
		<div class="col-lg-8 mx-auto p-5 py-md-5">
			<div class="mt-5 text-center">
				<h1 class="h1 mb-2" style="font-family: Amatic SC; font-weight: 700; color: #46b4b4">News - Vue
					<img src="images/icons/undraw_sticky-note-blue.svg" width="20rem">
				</h1>
				<img src="images/icons/undraw_fun-underline-blue.svg" width="45rem">
			</div>

			<table class="table">
				<tbody>
					<tr>
						<th>Id</th>
						<td>{{ tbl_news.id }}</td>
					</tr>
					<tr>
						<th>Title</th>
						<td>{{ tbl_news.title }}</td>
					</tr>
					<tr>
						<th>Description</th>
						<td>{{ tbl_news.description }}</td>
					</tr>
					<tr>
						<th>Content</th>
						<td>{{ tbl_news.content|raw }}</td>
					</tr>
					<tr>
						<th>Image</th>
						<td>{{ tbl_news.image }}</td>
					</tr>
					<tr>
						<th>Start_date_time</th>
						<td>{{ tbl_news.startDateTime ? tbl_news.startDateTime|date('Y-m-d') : '' }}</td>
					</tr>
					<tr>
						<th>End_date_time</th>
						<td>{{ tbl_news.endDateTime ? tbl_news.endDateTime|date('Y-m-d') : '' }}</td>
					</tr>
					<tr>
						<th>Created_at</th>
						<td>{{ tbl_news.createdAt ? tbl_news.createdAt|date('Y-m-d H:i:s') : '' }}</td>
					</tr>
				</tbody>
			</table>

			<a class="btn btn-primary btn-sm" style="font-family: Amatic SC; font-size: 22px; font-weight: 700;" href="{{ path('app_news_index') }}">Revenir à la liste</a>

			{% if app.user%}
			<a class="btn btn-primary btn-sm" style="font-family: Amatic SC; font-size: 22px; font-weight: 700;" href="{{ path('app_news_edit', {'id': tbl_news.id}) }}">Modifier</a>

			{{ include('news/_delete_form.html.twig') }}
			{% endif %}

		</div>
	</div>
{% endblock %}

