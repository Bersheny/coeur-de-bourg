		                            <td>{{ cdb_partners.websiteLink }}</td>
		                            <td>{{ cdb_partners.createdAt ? cdb_partners.createdAt|date('Y-m-d H:i:s') : '' }}</td>
		                            <td>
		                                <a href="{{ path('app_partners_show', {'id': cdb_partners.id}) }}">show</a>
