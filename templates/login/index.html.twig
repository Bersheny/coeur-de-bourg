{% extends 'navbar.html.twig' %}

{% block title %}Login - Cœur de bourg
{% endblock %}

{% block body %}

	<!--Image de couverture-->
	<header class="masthead2">
		<div class="container px-4 px-lg-5 h-100">
			<div class="row gx-4 gx-lg-5 h-100 align-items-center justify-content-center text-center">
				<div class="col-lg-8 align-self-end">
					<h1 class="text-white font-weight-bold" style="letter-spacing: 10px; font-family: Amatic SC; font-size: 72px">
						ÉPICERIE</h1>
				</div>
				<div class="col-lg-8 align-self-baseline">
					<h1 class="text-white" style="letter-spacing: 2px; font-family: Amatic SC; font-size: 72px;">CŒUR DE BOURG</h1>
					<h6 class="text-white-75" style="letter-spacing: 2px;">SAINT-QUENTIN-DE-CAPLONG</h6>
				</div>
			</div>
		</div>
	</header>

	{% if error %}
		<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}

	{% if app.user %}

		{# Partie 1 #}
		<div class="div-bg-1">
			<div class="col-lg-8 mx-auto p-5 py-md-5">
				<div class="mt-5 text-center">
					<h1 class="h1 mb-2" style="font-family: Amatic SC; font-weight: 700; color: #46b4b4">Connexion
						<i class="fa-solid fa-right-to-bracket fa-2xs"></i>
					</h1>
					<img src="images/icons/undraw_fun-underline-blue.svg" width="45rem">
				</div>
				<h4 class="text-center mt-5">Vous êtes déjà connecté !</h4>
			</div>
		</div>

	{% else %}

		{# Partie 1 #}
		<div class="div-bg-1">
			<div class="col-lg-8 mx-auto p-5 py-md-5">
				<div class="mt-5 text-center">
					<h1 class="h1 mb-2" style="font-family: Amatic SC; font-weight: 700; color: #46b4b4">Connexion
						<i class="fa-solid fa-right-to-bracket fa-2xs"></i>
					</h1>
					<img src="images/icons/undraw_fun-underline-blue.svg" width="45rem">
				</div>

				<form action="{{ path('app_login') }}" method="post">

					<div class="mb-4">
						<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

						<label class="form-label text-black" for="email">E-mail</label>
						<input type="text" class="form-control" id="username" name="_username" aria-label="email" value="{{ last_username }}">
					</div>

					<label for="password" class="form-label text-black">Mot de passe</label>
					<div class="input-group">
						<input type="password" class="form-control" id="password" name="_password" aria-label="password">
						<span class="input-group-text" onclick="password_show_hide();">
							<i class="fas fa-eye" id="show_eye"></i>
							<i class="fas fa-eye-slash d-none" id="hide_eye"></i>
						</span>
					</div>

					<div id="emailHelp" class="form-text mb-3">
						Veillez à ne jamais partager vos informations d'identification.
					</div>
					{# If you want to control the URL the user is redirected to on success
								<input type="hidden" name="_target_path" value="/account"> #}

					<button class="btn btn-primary" style="font-family: Amatic SC; font-size: 22px; font-weight: 700;" type="submit">Se connecter</button>
				</form>
			</div>
		</div>
	{% endif %}

{% endblock %}

