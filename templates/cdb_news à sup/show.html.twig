{% extends 'base.html.twig' %}

{% block title %}CdbNews{% endblock %}

{% block body %}
    <h1>CdbNews</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cdb_news.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ cdb_news.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ cdb_news.description }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ cdb_news.content }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ cdb_news.image }}</td>
            </tr>
            <tr>
                <th>Start_date</th>
                <td>{{ cdb_news.startDate ? cdb_news.startDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>End_date</th>
                <td>{{ cdb_news.endDate ? cdb_news.endDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ cdb_news.createdAt ? cdb_news.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_cdb_news_index') }}">back to list</a>

    <a href="{{ path('app_cdb_news_edit', {'id': cdb_news.id}) }}">edit</a>

