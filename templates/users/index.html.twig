{% extends 'navbar.html.twig' %}

{% block title %}Utilisateurs - Cœur de bourg
{% endblock %}

{% block body %}

	<!--Image de couverture-->
	<header class="masthead2">
		<div class="container px-4 px-lg-5 h-100">
			<div class="row gx-4 gx-lg-5 h-100 align-items-center justify-content-center text-center">
				<div class="col-lg-8 align-self-end">
					<h1 class="text-white font-weight-bold" style="letter-spacing: 10px; font-family: Amatic SC; font-size: 72px">
						ÉPICERIE</h1>
				</div>
				<div class="col-lg-8 align-self-baseline">
					<h1 class="text-white" style="letter-spacing: 2px; font-family: Amatic SC; font-size: 72px;">CŒUR DE BOURG</h1>
					<h6 class="text-white-75" style="letter-spacing: 2px;">SAINT-QUENTIN-DE-CAPLONG</h6>
				</div>
			</div>
		</div>
	</header>

	{# Partie 1 #}
	<div class="div-bg-1">
		<div class="col-lg-8 mx-auto p-5 py-md-5">
			<div class="mt-3 text-center">
				<h1 class="h1 mb-2" style="font-family: Amatic SC; font-weight: 700; color: #46b4b4">Utilisateurs
					<img src="/images/icons/undraw_person-blue.svg" width="20rem">
				</h1>
				<img src="/images/icons/undraw_fun-underline-blue.svg" width="45rem">
			</div>

			<div class="table-responsive">
				<table class="table table-striped mt-5">
					<thead>
						<tr>
							{# <th>Id</th> #}
							<th>E-mail</th>
							{# <th>Role</th> #}
							<th>Prénom</th>
							<th>Nom</th>
							{% if 'ROLE_ADMIN' in app.user.roles %}
								<th>Action</th>
							{% endif %}
						</tr>
					</thead>
					<tbody>
						{% for cdb_user in cdb_users %}
							<tr>
								{# <td>{{ cdb_user.id }}</td> #}
								<td>{{ cdb_user.email }}</td>
								{# <td>{{ cdb_user.role ? cdb_user.role|json_encode : '' }}</td> #}
								<td>{{ cdb_user.firstName }}</td>
								<td>{{ cdb_user.lastName }}</td>
								{% if 'ROLE_ADMIN' in app.user.roles %}
									<td>
										{{ include('users/_delete_form.html.twig') }}
									</td>
								{% endif %}
							</tr>
						{% else %}
							<tr>
								<td colspan="7">Il n'y a aucun utilisateur !</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
{% endblock %}

