<form method="post" action="{{ path('app_users_delete', {'id': cdb_user.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ cdb_user.id) }}">
    <button class="btn btn-danger btn-sm" style="font-family: Amatic SC; font-size: 22px; font-weight: 700;">Supprimer</button>
</form>
